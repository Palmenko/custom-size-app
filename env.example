# Railway Environment Variables
# Скопируйте этот файл в .env и заполните значения

# База данных (Railway автоматически предоставит DATABASE_URL)
DATABASE_URL="postgresql://user:password@host:port/database"

# Shopify App
SHOPIFY_API_KEY="your_shopify_api_key"
SHOPIFY_API_SECRET="your_shopify_api_secret"
SHOPIFY_APP_URL="https://your-app.railway.app"
SHOPIFY_APP_NAME="Custom Size App"

# SCOPES (разрешения для приложения)
SCOPES="write_products,read_products,write_orders,read_orders"

# HOST (Railway автоматически предоставит)
HOST="https://your-app.railway.app"

# SESSION_SECRET (сгенерируйте случайную строку)
SESSION_SECRET="your-session-secret-here" 